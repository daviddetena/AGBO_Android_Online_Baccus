<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daviddetena.baccus" >

    <!-- Indicamos que nuestra aplicaci칩n usar치 Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.daviddetena.baccus.controller.WineActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Ahora la pantalla que se ver치 al arrancar la app ser치 la de WebView -->
        <activity android:name=".controller.WebActivity" android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
