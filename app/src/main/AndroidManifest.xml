<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daviddetena.baccus" >

    <!-- Indicamos que nuestra aplicación usará Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".controller.WineActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".controller.WebActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".controller.SettingsActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- La pantalla del vino será la de TabHost definida en WineryActivity -->
        <activity
            android:name=".controller.WineryActivity"
            android:label="@string/title_activity_winery" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
